<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vcard.sg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SigninAndSignupActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.SigninActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.TermsConditionActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.SignupActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.SignupVerificationActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.SignupCreateActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.SignupContactSelectionActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.MainActivity" android:screenOrientation="portrait" />
    </application>

</manifest>